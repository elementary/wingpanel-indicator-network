<component type="addon">
  <id>io.elementary.wingpanel.network</id>
  <extends>io.elementary.wingpanel</extends>
  <name>Network Indicator</name>
  <summary>Connect to wireless networks and manage VPNs</summary>
  <icon type="stock">preferences-system-network</icon>
  <releases>
    <release version="2.4.0" date="2023-02-14" urgency="medium">
      <description>
        <p>Improvements:</p>
        <ul>
          <li>Show Airplane Mode and wired devices as compact circle buttons</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/wingpanel-indicator-network/issues/134">VPN switch jumps due to WiFi list height change</issue>
        <issue url="https://github.com/elementary/wingpanel-indicator-network/issues/152">Network adapter names aren't truncated</issue>
      </issues>
    </release>

    <release version="2.3.4" date="2022-10-15" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="2.3.3" date="2022-06-30" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Ensure correct tooltip on system start</li>
          <li>Prevent connecting to invalid VPNs</li>
          <li>Show correct info for WPA3 networks</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.2" date="2021-11-23" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Prevent blank lines in VPN list</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.1" date="2021-10-22" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Don't launch Captive Network Assistant with full connectivity</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.0" date="2021-07-14" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Fix VPN spinning after connecting</li>
          <li>Improve detecting network encryption type</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Ellipsize long network names</li>
          <li>Show tooltip on hover</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.2.4" date="2020-05-28" urgency="medium">
      <description>
        <p>Updated translations</p>
      </description>
    </release>
    <release version="2.2.3" date="2020-03-27" urgency="medium">
      <description>
        <p>Prevent panel icon from showing in the dock</p>
        <p>Updated translations</p>
      </description>
    </release>
  </releases>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/wingpanel-indicator-network/master/data/screenshot.png</image>
    </screenshot>
  </screenshots>
